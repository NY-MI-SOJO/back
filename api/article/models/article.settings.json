{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Article",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "Title": {
      "type": "string"
    },
    "Description": {
      "type": "richtext"
    },
    "URI": {
      "type": "string"
    },
    "tags": {
      "collection": "tag",
      "via": "articles"
    },
    "Source": {
      "type": "string"
    },
    "Image": {
      "type": "string"
    },
    "isHero": {
      "type": "boolean",
      "default": false
    },
    "articleOrientation": {
      "type": "enumeration",
      "enum": [
        "Vertical",
        "Horizontal"
      ],
      "default": "Vertical",
      "required": false
    },
    "imageDescription": {
      "type": "string"
    },
    "imgOrientation": {
      "type": "enumeration",
      "enum": [
        "Top",
        "Right"
      ],
      "default": "Top"
    }
  }
}
